<section>
  <h2>Create a new flat</h2>
  <form action="/create-flat" method="post">
    <input type="text" name="flatName" placeholder="flat name" />
    <label for="flatmembers">Choose flatmates</label>
    <select name="flatMembers" id="flatmembers" multiple>
      {{#each allUsers}}
        <option value="{{_id}}">{{username}}</option>
      {{/each}}
    </select>
    <button>Create flat</button>
  </form>
  {{#if error}}
    {{error}}
  {{/if}}
</section>