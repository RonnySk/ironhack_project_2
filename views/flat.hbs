<section>
    <h1>Welcome <span class="{{#if isAdmin}}is-admin{{/if}}">{{user}}</span></h1>
    {{!-- {{#if announcement}}
        <div class="announcement">
            {{announcement}}
        </div>
    {{/if}} --}}
</section>
<section>
    <h2>Your flat:</h2>
    {{#if flatName}}
        <p>{{flatName}}</p>
    {{else}}
        <p>You are currently in no flat</p>
        <a class="btn" href="/create-flat">Create flat</a>
    {{/if}}
    <h2>Your flatmates:</h2>
    {{#if flatMates}}
        <ul class="list-flatmates">
            {{#each flatMates}}
                <li>
                    <figure class="user">
                        {{#if this.image}}
                            <img src="{{this.image}}" alt="{{this.name}}" />
                        {{/if}}
                        <figcaption class="name">{{this.name}}</figcaption>
                    </figure>
                </li>
            {{/each}}
        </ul>
    {{/if}}
</section>
<section>
    <h2>This weekâ€™s tasks:</h2>
    {{#if tasks}}
        <ul class="list-tasks">
            {{#each tasks}}
                <li>
                    <figure class="user">
                        {{#if this.image}}
                            <img src="{{this.image}}" alt="{{this.name}}" />
                        {{/if}}
                        <figcaption class="name">{{this.name}}</figcaption>
                    </figure>
                    <p class="task">
                        <strong>{{this.task.name}}</strong><br>
                        <small>{{this.task.description}}</small>
                    </p>
                    <div class="status">
                        {{#if !this.task.isDone}}
                            <button class="btn btn-update-task">ðŸ”²</button>
                        {{else}}
                            <button class="btn btn-update-task">âœ…</button>
                        {{/if}}
                    </div>
                </li>
            {{/each}} 
        </ul>
    {{else}}
        <p>No tasks yet.</p>
    {{/if}}
</section>
<section class="add-task">
    <h2>Add task</h2>
    <form action="" method="post">
        <input type="text" name="task-name" value="" placeholder="Name">
        <input type="text" name="task-description" value="" placeholder="Description">
        <select name="task-user">
            <option value="placeholder" disabled selected hidden>assign to flatmate</option>
        </select>
        <button>add task</button>
    </form>
</section>